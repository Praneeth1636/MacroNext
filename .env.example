# Copy this file to .env or .env.local, then set your real values.

# PostgreSQL. Use either:
# - Local: postgresql://user:password@localhost:5432/macronext?schema=public (requires Docker or local Postgres)
# - Neon (free, no Docker): create a project at https://neon.tech and paste the connection string below
DATABASE_URL="postgresql://user:password@localhost:5432/macronext?schema=public"

# Clerk (get keys from https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
# Use custom auth pages (optional; defaults to /sign-in and /sign-up)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/register
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/app
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/app
